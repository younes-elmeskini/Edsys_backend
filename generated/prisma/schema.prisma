generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  VISITOR
}

enum Status {
  RECRUITED
  FARTHER
  EMPLOYED
  SEARCHING
}

model User {
  userId    String   @id @default(cuid())
  userName  String?
  email     String?  @unique
  password  String?
  role      Role
  avatar    String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Client {
  clientId     String   @id @default(cuid())
  fistName     String?
  lastName     String?
  phone        String?
  email        String?  @unique
  education    String?
  Status       Status
  academicYear String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model Recuired {
  recuiredId     String   @id @default(cuid())
  title          String?
  campany        String?
  position       String?
  graduationYear String?
  city           String?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}

model futher {
  futhId    String   @id @default(cuid())
  school    String?
  education String?
  city      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model self_employed {
  employedId   String   @id @default(cuid())
  selfEmployed String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model searching {
  searchId         String   @id @default(cuid())
  researchDuration String?
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
}
